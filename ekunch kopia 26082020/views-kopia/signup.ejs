<html lang="pl">

<head>
    <meta charset="UTF-8">
    <title>Sample Site</title>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>

</head>

<body class="body">
    <div class="container col-sm-12" id="mainform">
        <div id="signupbox" style=" margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">

            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">Rejestracja</div>
                    <div style="float:right; font-size: 85%; position: relative; top:-10px"><a id="signinlink" href="/">Logowanie</a></div>
                </div>
                <div class="panel-body">
                    <form class="form-horizontal" role="form" method="post" action="/signup" onSubmit="return checkblank(this);">
                        <% if (message.length > 0) { %>
                            <div class="alert alert-success col-sm-12">
                                <%= message %>
                            </div>
                            <% } %>
                                <div id="signupalert" style="display:none" class="alert alert-danger">
                                    <p>Błąd:</p>
                                    <span></span>
                                </div>
                                <div class="form-group">
                                    <label for="sesa_no" class="col-md-3 control-label">Numer SESA</label>
                                    <div class="col-md-9">
                                        <input type="number" class="form-control" name="sesa_no1" placeholder="sesa">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="first_name" class="col-md-3 control-label">Imię</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" name="first_name" placeholder="imię">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="last_name" class="col-md-3 control-label">Nazwisko</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" name="last_name" placeholder="nazwisko">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="person_no" class="col-md-3 control-label">Numer akt osobowych</label>
                                    <div class="col-md-9">
                                        <input type="number" class="form-control" name="person_no" placeholder="numer akt">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="user_name" class="col-md-3 control-label">Sktócona nazwa</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" name="user_name" placeholder="sktót">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="password" class="col-md-3 control-label">Hasło</label>
                                    <div class="col-md-9">
                                        <input type="password" class="form-control" name="password" placeholder="hasło">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <!-- Button -->
                                    <div class="col-md-offset-3 col-md-9">
                                        <button id="btn-signup" type="submit" class="btn btn-info"><i class="icon-hand-right"></i> &nbsp Zarejestruj</button>
                                    </div>
                                </div>
                    </form>
                </div>
            </div>


        </div>
    </div>

</body>

</html>